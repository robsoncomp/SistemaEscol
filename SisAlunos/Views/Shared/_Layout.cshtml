<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SisAlunos - @ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SisAlunos", "HomeLogado", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "HomeLogado", "Home")</li>
                    <li>@Html.ActionLink("Cadastro de Alunos", "Index", "Alunos")</li>
                    <li>@Html.ActionLink("Cadastro de Cidades", "Index", "Cidades")</li>
                    <li>@Html.ActionLink("Alunos por Cidade", "AlunosCidade", "Cidades")</li>
                    <li>@Html.ActionLink("Relatórios", "Index", "Relatorios")</li>
                    <li>@Html.ActionLink("Gráficos", "Index", "Graficos")</li>
                </ul>
                <div style="float: right; padding: 15px;">
                   
                    <li>
                        <img width="20" height="20" src="~/Content/img/Button-error-icon.png" />
                        @Html.ActionLink("Sair [X] ", "Sair", "Home")
                    </li>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="mensagens" style="padding: 10px;">
            @Html.Partial("_PartialMensagensAlerta")
        </div>
        <div id="body">
        @RenderBody()
        </div>
       
        <div id="footer" style="padding-top: 500px;">
            <footer>
                <hr />
                <p>&copy; @DateTime.Now.Year -SisAlunos</p>
            </footer>
        </div>
    </div>

  
    @RenderSection("scripts", required: false)
</body>
</html>
